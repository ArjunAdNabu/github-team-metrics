# GitHub Configuration
GITHUB_TOKEN=your_github_personal_access_token_here
GITHUB_ORG=AdNabu-Team

# Google Sheets Configuration
GOOGLE_CREDENTIALS_PATH=./credentials/google_service_account.json
GOOGLE_SHEET_ID=your_sheet_id_here
GOOGLE_SHEET_NAME=Sheet1

# User Mapping (optional)
# USER_MAPPING_FILE=./user_mapping.json

# Optional: Date Range (defaults to last 30 days)
# START_DATE=YYYY-MM-DD
# END_DATE=YYYY-MM-DD

# Optional: Output Configuration
# OUTPUT_DIR=./output
# OUTPUT_FILENAME=team_metrics.xlsx

# Optional: Performance Tuning
# MAX_WORKERS=5
# REQUEST_TIMEOUT=30
# RATE_LIMIT_BUFFER=100

# ========================================
# AI Configuration (for Individual Reports)
# ========================================

# AI Provider: 'gemini' (free), 'claude', 'chatgpt', 'ollama', or 'none'
AI_PROVIDER=gemini

# Google Gemini API (FREE tier - recommended)
# Get your free API key at: https://makersuite.google.com/app/apikey
# No credit card required. Limits: 1,500 requests/day, 10M tokens/day
GEMINI_API_KEY=your_gemini_api_key_here
# GEMINI_MODEL=gemini-2.0-flash-exp  # Optional: specify model (default: gemini-2.0-flash-exp)

# Alternative AI Providers (optional fallbacks)
# CLAUDE_API_KEY=your_claude_api_key_here
# CHATGPT_API_KEY=your_chatgpt_api_key_here

# AI Analysis Settings
# ENABLE_AI_ANALYSIS=true
# SAMPLE_SIZE_COMMITS=10  # Number of commits to analyze per engineer
# SAMPLE_SIZE_REVIEWS=5   # Number of reviews to analyze per engineer

# ========================================
# Concurrency Settings (for Individual Reports)
# ========================================

# MAX_WORKERS_DATA_FETCHING=10    # GitHub API calls (parallel)
# MAX_WORKERS_AI_ANALYSIS=5       # Gemini API calls (rate limit safe)
# MAX_WORKERS_PDF_GENERATION=5    # PDF creation (CPU-bound)
# ENABLE_CONCURRENT_PROCESSING=true
